# history
alias h='history'

# top
alias tc='top -o cpu'
alias tm='top -o vsize'

# miscellaneous
alias c='clear'

# TODO Only define on OS X
alias o='open'

# ls
alias ll='ls -hl'
alias lla='ls -hal'
alias llt='ls -hltr'
alias lsd='ls -l | grep "^d" ' # list directories only

# movement
alias cdd='cd ~/Development'

# MySQL
alias mysql-start='sudo mysqld_safe'
alias mysql-stop='mysqladmin -u root shutdown'

# SourceTree
alias st='open -a SourceTree '

# Bundler
alias be='bundle exec '
alias bx='bundle exec '
alias bi='bundle install '
alias bl='bundle list '

